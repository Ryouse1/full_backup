prefix=${pcfiledir}/../..
includedir=${prefix}/include
libdir=${prefix}/lib

sysconfdir=/workspace/destdir/etc
localstatedir=/workspace/destdir/var
confdir=/workspace/destdir/etc/fonts
cachedir=/workspace/destdir/var/cache/fontconfig

Name: Fontconfig
Description: Font configuration and customization library
Version: 2.17.0
Requires.private: freetype2 >=  21.0.15, expat
Libs: -L${libdir} -lfontconfig
Libs.private: -pthread -lm
Cflags: -I${includedir}
